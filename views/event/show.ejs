<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
   <div class="container">
       <div class="row mt-4">
           <div class="col-md-9 offset-md-1">
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title"><%= event.title %></h5>
                    <hr>
                    <p class="card-text"><%= event.description %></p>
                    <p><%= event.location %></p>
                    <p><small><%= event.date.toDateString() %></small></p>

                    <% if(((user) && (user.id == event.user_id)) || (user.role==true)) { %>
                        <a href="<%= '/events/edit/' + event.id %>" class="btn btn-primary">
                            Edit 
                        </a>
                        <button id="deleteBtn" data-id="<%=event.id%>" onclick="deleteEvent()" class="btn btn-danger">
                            Delete
                        </button>
                    <% } %> 
                    </div>
                </div>
           </div>
       </div>
   </div>
<%- include('../partials/footer') -%>

  

